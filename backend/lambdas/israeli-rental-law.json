    "schedules": {
        "first_schedule": {
            "title": "תוספת ראשונה - דירה שאינה ראויה למגורים",
            "conditions": [
                "אינה כוללת מערכת ניקוז",
                "אינה כוללת מערכת חשמל או תאורה",
                "אין פתחי אוורור ותאורה טבעית, דלתות וחלונות, דלת כניסה עם נעילה",
                "אינה כוללת מערכת להספקת מי שתייה",
                "אינה כוללת מחיצה בין השירותים לדירה",
                "יש בה סיכון בלתי סביר לבטיחות או בריאות"
            ]
        },
        "second_schedule": {
            "title": "תוספת שנייה - תוכן חוזה שכירות למגורים",
